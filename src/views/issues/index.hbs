<div id="main">
    <h1 class="pageHeader">Issues</h1>
    <h2>Click on the issue you want to close or reopen</h2>
    <div id="issuesTableContainer">
        <table id="issuesTable">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Avatar</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>        
                {{#if issuesToView.length}}
                {{#each issuesToView}}
                <tr class="issuesTr" id="issue{{this.id}}">
                    <td id="issueName"><a href="{{this.url}}">{{this.title}}</a></td>
                    <td id="issueDesc"><a href="{{this.url}}"><pre>{{this.description}}</pre></a></td>
                    <td><a href="{{this.url}}"><img src="{{this.avatar}}"/></a></td>
                    <td><a id="issueStatus" href="{{this.url}}">{{this.status}}</a></td>
                </tr>
                {{/each}}
                {{else}}
                <tr>
                    <td>Could not find Issues.</td>
                </tr>
                {{/if}}
                </tbody>
        </table>

        <template id="issueTemplate">
            <tr class="issuesTr">
                <td id="issueName"><a id="newIssueLink1" href=""></a></td>
                <td id="issueDesc"><a id="newIssueLink2" href=""><pre id="issueDescNewText"></pre></a></td>
                <td><a id="issueGravatar" href=""><img id="gravatar" src="#"/></a></td>
                <td><a id="issueStatus" href=""></a></td>             
             </tr>
        </template>
    </div>
</div>