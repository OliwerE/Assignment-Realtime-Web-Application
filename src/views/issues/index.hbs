<div id="main">
    <h1 class="pageHeader">Issues</h1>
    <div id="issuesTableContainer">
        <table id="issuesTable">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Avatar</th>
                </tr>
            </thead>
            <tbody>        
                {{#if issuesToView.length}}
                {{#each issuesToView}}
                <tr class="issuesTr">
                    <th id="issueName"><a href="/issues/{{this.id}}">{{this.title}}</a></th>
                    <td id="issueDesc"><a href="/issues/{{this.id}}">{{this.description}}</a></td>
                    <td><a href="/issues/{{this.id}}"><img src="{{this.avatar}}"/></a></td>
                </tr>
                {{/each}}
                {{else}}
                <tr>
                    <td>Could not find Issues.</td>
                </tr>
                {{/if}}
                </tbody>
        </table>

        <template id="issueTemplate">
            <tr class="issuesTr">
                <th ><a id="issueName" href="/issues/#"></a></th>
                <td ><a id="issueDesc" href="/issues/#"></a></td>
                <td><a href="/issues/#"><img id="gravatar" src="#"/></a></td>
             </tr>
        </template>
    </div>
</div>